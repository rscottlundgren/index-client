<!-- Horizontal Drop Down Form Menu: Sign-In ---------------------------------->
<section id="si-sect" class="col-4">
  <form id="sign-in" class="card bg-transparent">
    <div class="container card-body align-center">
      <!-- Drop Down Form Heading: Sign-In ------------------------------------>
      <h3 class="text-center"><i class="far fa-user"></i> Sign-In:</h3>
      <hr>
      <!-- Horizontal Form Row: Email ----------------------------------------->
      <div class="form-group row">
        <!-- Person Image Signifying Email Address/Login ---------------------->
        <label for="si-@" class="col-sm-2 col-form-label text-center">
          <i class="far fa-user-circle fa-2x"></i>
        </label>
        <!-- User Input Field for Email Address ------------------------------->
        <div class="col-sm-10">
          <input id="si-@" class="form-control" type="email"
          name="credentials[email]" placeholder="handle@domain.com">
        </div>
      </div>
      <!-- Horizontal Form Row: Password -------------------------------------->
      <div class="form-group row">
        <!-- Lock Image Signifying Password ----------------------------------->
        <label for="si-pw" class="col-sm-2 col-form-label text-center">
          <i class="fas fa-lock fa-2x"></i>
        </label>
        <!-- User Input Field For Password ------------------------------------>
        <div class="col-sm-10">
          <input id="si-pw" class="form-control" type="password"
          name="credentials[password]" placeholder="Password">
        </div>
      </div>
      <!-- "Submit" Button For Sign-In Drop Down Form ------------------------->
      <div class="form-group row">
        <div class="col-sm-12 text-center">
          <input id="si-btn" type="submit" class="btn btn-outline-light ml-2"
          placeholder="Sign-In"></input>
          <!-- Closing Tags --------------------------------------------------->
        </div>
      </div>
    </div>
  </form>
</section>
